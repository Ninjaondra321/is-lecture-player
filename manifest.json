{
    "manifest_version": 3,
    "name": "IS Lecture Player",
    "version": "1.2.2",
    "description": "Watch IS lectures in your browser without having to download them",
    "icons": {
        "16": "src/icons/icon16.png",
        "32": "src/icons/icon32.png",
        "48": "src/icons/icon48.png",
        "128": "src/icons/icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "firefox-is-lecutre-player@notime.cz",
            "strict_min_version": "120.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    },
    "content_scripts": [
        {
            "world": "ISOLATED",
            "matches": [
                "https://is-lecture-player.notime.cz/testing_page.html/*",
                "https://video.muni.cz/download.cgi?*"
            ],
            "js": [
                "src/inject/bridge.js"
            ],
            "run_at": "document_start"
        },
        {
            "world": "MAIN",
            "matches": [
                "https://is-lecture-player.notime.cz/testing_page.html/*",
                "https://video.muni.cz/download.cgi?*"
            ],
            "js": [
                "src/inject/hijack.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/pages/player.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}